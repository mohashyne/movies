<h1>User Details</h1>

<section class="summary">
  <h1>
    <strong>Username: <%= @user.name %></strong>
  </h1>
  <h2>Email: <%= mail_to(@user.email) %></h2>
  <ul>
    <li>created_at: <%= @user.created_at %></li>
    <li>updated_at: <%= @user.updated_at %></li>
  </ul>
<% if current_user?(@user)%>
  <span class="user-btn">
    <%= link_to "Edit Account", edit_user_path(@user) %>
  </span>
    <span class="user-btn">
   <%= link_to "Delete Account", @user,
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> 
      </span>
  <% end %>

  <% if @registrations.present? %>
<h3>registrations</h3>
<% @registrations.each do |r| %>
<div class="group-item">

<div class="placeholer_img" >
<%= link_to image_tag(r.movie.image_file_name), r.movie %>
</div>

<div>
<%= link_to r.movie.name, r.movie %>
</div>

<div>
<%= time_ago_in_words(r.created_at)%> ago
</div>

</div>
<% end %>

<% end %>


<% if @liked_movies.present? %>
<h3>Liked Movies</h3>

<div class="liked-movies">
<% @liked_movies.each do |movie| %>
<%= link_to image_tag(movie.image_file_name), movie %>
<% end %>
</div>

<% end %>
</section>
