

<section class="movies">
<div class="placeholer_img" >
<%=  image_tag @movie.image_file_name %>
<% if current_user %>
<div class="likes">
<%= like_or_unlike_count(@movie, @likes, @likers)%>
</div>
     <aside>
      <% if @likers.present? %>
      <h4>Liked By</h4>
      <ul>
      <% @likers.each do |user| %>
      <li>
      <%= link_to user.name, user %>
      </li>
      <% end %>
      </ul>
      <% end %>
      </aside>

<% end %>
</div>
    <div class="summary">
      <h2><%= @movie.name %>
       </h2>
      <h3>by <%= @movie.actor%></h3>
      <span class="price">
        ShowTime: <%= @movie.starts_at.strftime("%B %d at %I:%M %P") %>
      </span>
      <p>
        <%= @movie.description %>
      </p>
      <p>
      Producer: <%= @movie.producer%>
      </p>

      <p>
      Release Year: <%= @movie.release_year%>
      </p>
       
      <p>
      Networth: <%= @movie.net_worth%>
      </p>
      <span class="price">
<%= price(@movie) %> &bull; <%= @movie.capacity == 1 ? "per seat" : pluralize(@movie.capacity, "seat")  %>
      </span>

      <div>
   <span class="update-btn">
           <!--  <%= link_to 'Register', new_movie_registration_path(@movie), class: "btn reg-btn"  %> --> <%= register_or_sold_out(@movie)  %>
      </span>

      <%= link_to "Who is registered?", movie_registrations_path(@movie) %>
      </div>
     
      <% if current_user_admin? %>
      <span class="update-btn">   
         <%= link_to 'Edit', edit_movie_path(@movie), class: "btn"  %>
        <%= link_to 'Add New Movie', new_movie_path, class: "btn"  %> 

         <%= link_to "Delete Movie", @movie,
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn" %> 
      </span>
      <% end %>
    </div>
</section>

