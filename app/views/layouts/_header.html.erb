<header>
  <nav>
    <%= link_to image_tag('logo.jpg'), root_path %>
    <ul class="nav-list">
      <% if current_user %>
     

        <li>
        <p> <strong><%= link_to current_user.name, current_user %></strong> </p>
          <%= form_with url: session_path, method: :delete, local: true do %>
            <%= submit_tag 'Sign Out', class: "sign_out" %>
          <% end %>
        </li>
        <li>
          <%= link_to 'All Movies', movies_path %>
        </li>

        <% if current_user_admin? %>
          <li>
            <%= link_to 'Add New Movie', new_movie_path %>
          </li>
          <li>
            <%= link_to 'All Users', users_path %>
          </li>

              <li>
          <%= link_to 'Add New User', signup_path %>
        </li>

          
        <% end %>
        
      

      <% else %>
        <li>
          <%= link_to 'Sign In', new_session_path %>
        </li>
        <li>
          <%= link_to 'Sign Up', signup_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
